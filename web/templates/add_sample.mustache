<h2>Add sample</h2>

<form action="/samples" method="post">
  <fieldset>
    <legend>Sample</legend>
    <div class="clearfix">
      <label>Name</label>
      <div class="input">
        <input type="text" name="name">
      </div>
    </div>
    <div class="clearfix">
      <label>Coverage threshold</label>
      <div class="input">
        <input type="text" class="mini" name="coverage_threshold">
      </div>
    </div>
    <div class="clearfix">
      <label>Pool size</label>
      <div class="input">
        <input type="text" class="mini" name="pool_size">
      </div>
    </div>
    <div class="actions">
      <button type="submit" class="btn primary">Add sample</button>
      <button type="reset" class="btn">Cancel</button>
    </div>
  </fieldset>
</form>
